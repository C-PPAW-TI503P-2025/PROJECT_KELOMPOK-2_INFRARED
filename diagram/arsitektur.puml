@startuml
!theme plain
title Arsitektur Sistem (Model Komponen)

package "IoT Device (Perangkat)" {
    component "Sensor IR" as Sensor
    component "ESP32 Controller" as ESP
    component "Servo Motor" as Servo
}

package "Server Side (Backend)" {
    component "Node.js API" as Backend
    database "SQLite\n(trash_monitoring.db)" as DB
}

package "Client Side (Frontend)" {
    component "Web Dashboard" as Dashboard
}

' Relasi
Sensor -> ESP : Input Sinyal
ESP -> Servo : Kontrol Mekanik
ESP -down-> Backend : Kirim Data (HTTP POST)
Backend -right-> DB : Simpan & Baca Data
Dashboard -left-> Backend : Request Data JSON

@enduml